@model IEnumerable<TN408Project.Models.CartContent>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double total = 0;
}
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

<script>
    async function changeQuality(productid, quantity) {
        await $.ajax({
            type: 'POST', url: 'updatecart', data: { productid: productid, quantity: quantity }, success: function (response) {
                if (response.success) {
                }
            },
            error: function (response) {
                alert("error!");  //
            }
        });
        location.reload();
    }
    async function addDH() {
        await $.ajax({
            type: 'POST', url: 'addDonHang', data: {}, success: function (response) {

            }
        }); alert("Cập nhật đơn hàng của bạn thành công!");
        window.location = "/";
    }
</script>

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Giỏ hàng của tôi</li>
    </ol>
</nav>

<div class="album bg-light mt-3">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-3 row-cols-md-4 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm" style="height:100%">
                        <img src="@Url.Content("~/Myfiles/" + item.anhspdeltail.LinkAnh)" class="bd-placeholder-img card-img-top" width="100%" height="225" />

                        <div class="card-body">
                            <h4>@item.sanphamdetail.TenSanPham</h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="text-danger fw-bold">@item.sanphamdetail.Gia VNĐ</p>
                                <div>
                                    SL:
                                    <input value="@item.SL" type="number" id="quality" name="quality" class="quanlity text-center" onchange="changeQuality(@item.sanphamdetail.MaSanPham , value)" />
                                </div>
                            </div>
                            <div class="hidden">
                                @{ double val = Convert.ToDouble(item.sanphamdetail.Gia) * item.SL;
                                    total += val;
                                }
                                @val
                            </div>
                        </div>
                    </div>

                </div>
            }

        </div>
        <div class="d-flex justify-content-between align-items-center mt-4">
            <p class="text-danger fw-bold">Tổng giá: @total .000VND</p>
            <button onclick="addDH()" class="button-29" style="width:200px">Thanh Toán</button>
        </div>
    </div>
</div>




