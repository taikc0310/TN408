@model TN408Project.DataDB.TaiKhoan

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .register-img {
        object-fit: contain;
    }
</style>

<div class="container-fluid">

    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-md-flex">
            <img src="~/images/anhtraicay6.jpg" class="register-img" />
        </div>
        <!-- The content half -->
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">
                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <div class="profile" style="padding:20px;width: 400px">
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <h3 class="display-4" style="text-align:center; font-weight:800">REGISTER</h3>
                                    <div class="form-group mb-3">
                                        <label asp-for="TenDangNhap">Username</label>
                                        <input asp-for="TenDangNhap" style="width:350px"
                                               class="form-control rounded-pill border-0 shadow-sm px-4" id="username" placeholder="Your Username" />
                                        <span class="text-danger">@ViewBag.error</span>
                                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>

                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Email" for="email">Email address</label>
                                        <input asp-for="Email" type="email" style="width:350px"
                                               class="form-control rounded-pill border-0 shadow-sm px-4" id="email" placeholder="name@example.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="MatKhau" for="password">Password</label>
                                        <input asp-for="MatKhau" type="password" style="width:350px"
                                               class="form-control rounded-pill border-0 shadow-sm px-4" id="password" placeholder="password" />
                                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                                    </div>
                                    @*<div class="form-group mb-3">
                                            <label for="confirm_password">Confirm Password</label>
                                            <input type="password" style="width:350px" name="confirm_password"
                                                   class="form-control rounded-pill border-0 shadow-sm px-4" id="confirm_password" placeholder="password" required />
                                            <div class="invalid-feedback">

                                                Password New Incorrect!
                                            </div>
                                        </div>*@
                                    @*<div class="form-group mb-3">
                                            <input name="remember_me" value="" type="checkbox" class="custom-control-input" id="terms" require>Agree to terms and conditions

                                        </div>*@
                                    <p class="outer-link">
                                        Already have an account?
                                        <a href="/login">Login Now</a>
                                    </p>
                                    <div class="button">
                                        <button type="submit" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm" style="margin-left: 30%; margin-top:10px">Register</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
