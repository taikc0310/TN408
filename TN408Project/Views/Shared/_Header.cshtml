@using Microsoft.AspNetCore.Http

<!-- Header Section Begin -->
<header class="header navbar-area">
    <div class="topbar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 col-md-4 col-12">
                    <div class="top-left">
                        <ul class="menu-top-link">
                            <li>
                                <div class="select-position">
                                    <i class="lni lni-star-filled"></i>
                                    <select id="select4" style=" background-color: rgba(255, 255, 255, 0.459);" >
                                        <option value="0" selected >$ USD  </option>
                                        <option value="1">€ EURO</option>
                                        <option value="2">$ CAD</option>
                                        <option value="3">₹ INR</option>
                                        <option value="4">¥ CNY</option>
                                        <option value="5">৳ BDT</option>
                                    </select>
                                </div>
                            </li>
                            <li>
                                <div class="select-position">
                                    <i class="lni lni-star-filled"></i>
                                    <select id="select5" style=" background-color: rgba(255, 255, 255, 0.459);">
                                        <option value="0" selected >English</option>
                                        <option value="1">Tiếng việt</option>
                                        <option value="2">Filipino</option>
                                        <option value="3">Français</option>
                                    </select>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>


                <div class="col-lg-4 col-md-4 col-12">
                    <div class="top-middle">
                        <ul class="useful-links">
                            <li><a href="/register">Register</a></li>
                            <li><a href="/login">Login</a></li>
                            <li><a href="about-us.html">About Us</a></li>
                            <li><a href="contact.html">Contact Us</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-12">
                    <ul class="top-end nav" style="display: flex; justify-content:center; align-items:center">

                        <li class="nav-item">
                            <a class="nav-link" href="/cart">

                                <i class="fa fa-shopping-cart" style="font-size:26px; color:white"></i>
                                @if (Context.Session.GetInt32("countCart") != null)
                                {
                                    <span class="badge rounded-pill badge-notification bg-danger">@Context.Session.GetInt32("countCart")</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill badge-notification bg-danger">0</span>
                                    @*@await Html.PartialAsync("_CartPartial")*@
                                }
                            </a>
                        </li>
                        @* Account *@
                        <li class="nav-item me-3 me-lg-1">
                            <div class="nav-link d-sm-flex align-items-sm-center">

                                @if (@Context.Session.GetString("username") != null)
                                {
                                    <strong class="d-none d-sm-block ms-1">@Context.Session.GetString("username")</strong> }
                                else
                                {
                                    <strong class="d-none d-sm-block ms-1">Guest</strong>
                                }

                            </div>
                        </li>

                        <li class="nav-item dropdown me-3 me-lg-1 ">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/images/user.svg" style="width: 1.6rem"/>
                            </a>
                            <ul class="dropdown-menu " aria-labelledby="navbarDarkDropdownMenuLink">
                                @if (@Context.Session.GetString("username") == null)
                                {
                                    <li><a class="dropdown-item" href="/login">Đăng nhập</a></li>
                                    <li><a class="dropdown-item" href="/register">Đăng ký</a></li>
                                 }
                                else
                                {
                                    <li><a class="dropdown-item" href="/profile">Thông tin cá nhân</a></li>
                                    <li><a class="dropdown-item" href="/Logout">Đăng xuất</a></li>
                                }
                            </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="./home"><img src="~/images/logo/logo5.png" style="sizes=32x32" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li class="active"><a href="./home">Home</a></li>
                            <li><a href="./shop-grid.html">Shop</a></li>
                            <li>
                                <a href="#">Pages</a>
                                <ul class="header__menu__dropdown">
                                    <li><a href="#">Shop Details</a></li>
                                    <li><a href="#">Shoping Cart</a></li>
                                    <li><a href="#">Check Out</a></li>
                                    <li><a href="#">Blog Details</a></li>
                                </ul>
                            </li>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                            <li><a href="#"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
                        </ul>
                        <div class="header__cart__price">item: <span>$150.00</span></div>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </div>
</header>